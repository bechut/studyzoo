generator client {
  provider      = "prisma-client-js"
  output        = "client/user"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("USER_MS_DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique() @default("") @db.VarChar(255)
  password  String    @default("") @db.VarChar(255)
  status    Boolean   @default(true)
  createdAt DateTime  @default(now()) @db.Timestamptz
  updatedAt DateTime? @db.Timestamptz
  Profile   Profile?
  Players   Player[]
}

enum GENDERS {
  Male
  Female
  Other
}

model Profile {
  id         String   @id @default(uuid())
  first_name String   @default("") @db.VarChar(255)
  last_name  String   @default("") @db.VarChar(255)
  gender     GENDERS?
  age        Int?
  bio        String?
  user_id    String?  @unique
  User       User?    @relation(fields: [user_id], references: [id])
  player_id  String?  @unique
  Player     Player?  @relation(fields: [player_id], references: [id])
}

model Player {
  id      String   @id @default(uuid())
  user_id String?
  User    User?    @relation(fields: [user_id], references: [id])
  Profile Profile?
}

model Intro {
  id        String    @id @default(uuid())
  title     String    @default("") @db.VarChar(255) @unique()
  image     String    @default("") @db.VarChar(255)
  image_url String    @default("") @db.VarChar(255)
  createdAt DateTime  @default(now()) @db.Timestamptz
  updatedAt DateTime? @db.Timestamptz
}
