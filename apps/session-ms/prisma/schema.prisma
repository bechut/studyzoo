generator client {
  provider = "prisma-client-js"
  output        = "client/session"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("SESSION_MS_DATABASE_URL")
}

enum OTP_TYPE {
  LOGIN
  ACCESS_TOKEN
  FORGOT_PASSWORD
}

model Otp {
  id        String    @id @default(uuid())
  value     String    @default("")
  type      OTP_TYPE  @default(LOGIN)
  createdAt DateTime  @default(now()) @db.Timestamptz
  expiredAt DateTime? @default(now()) @db.Timestamptz
  user_id   String?
}